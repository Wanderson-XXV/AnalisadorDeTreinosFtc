generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./data.db"
}

model Round {
  id           String   @id @default(cuid())
  startTime    DateTime
  endTime      DateTime?
  observations String?
  totalDuration Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  cycles       Cycle[]
}

model Cycle {
  id           String   @id @default(cuid())
  roundId      String
  cycleNumber  Int
  duration     Int
  hits         Int      @default(0)
  misses       Int      @default(0)
  timestamp    Int
  timeInterval String
  createdAt    DateTime @default(now())
  round        Round    @relation(fields: [roundId], references: [id], onDelete: Cascade)

  @@index([roundId])
}
